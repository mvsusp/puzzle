{
  "name": "panel-pop-threejs",
  "version": "0.1.0",
  "description": "Panel de Pon / Tetris Attack / Puzzle League clone built with Three.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.{js,ts,tsx,json,css}",
    "format:check": "prettier --check src/**/*.{js,ts,tsx,json,css}",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "three": "^0.160.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/three": "^0.160.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "happy-dom": "^18.0.1",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "game",
    "puzzle",
    "tetris-attack",
    "panel-de-pon",
    "three.js",
    "typescript"
  ],
  "author": "Panel Pop Team",
  "license": "MIT"
}
